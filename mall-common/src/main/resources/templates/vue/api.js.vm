import request from '@/router/axios';

export const getList = (current, size, params) => {
  return request({
    url: '/$!{cfg.entityKey}/list',
    method: 'get',
    params: {
      ...params,
      current,
      size,
    }
  })
}

export const getDetail = (id) => {
  return request({
    url: '/$!{cfg.entityKey}/detail',
    method: 'get',
    params: {
      id
    }
  })
}

export const remove = (ids) => {
  return request({
    url: '/$!{cfg.entityKey}/remove',
    method: 'post',
    params: {
      ids,
    }
  })
}

export const add = (row) => {
  return request({
    url: '/$!{cfg.entityKey}/submit',
    method: 'post',
    data: row
  })
}

export const update = (row) => {
  return request({
    url: '/$!{cfg.entityKey}/submit',
    method: 'post',
    data: row
  })
}

